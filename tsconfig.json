{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"jest.setup.ts",
		"app/**/*.ts",
		"app/**/*.tsx",
		"app/**/*.js",
		"app-library/**/*.ts",
		"app-library/**/*.tsx",
		"app-library/**/*.js"
	],
	"exclude": ["node_modules", "**/__tests__/**"]
}
